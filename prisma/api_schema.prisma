generator client {
  provider = "prisma-client-js"
  output = "./generated/api_client"
}

datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

model Resume {
    id              String          @id
    userId          String
    createdAt       DateTime        @default(now())
    updatedAt       DateTime        @updatedAt
}

model Application {
    id                  String          @id
    userId              String
    jobId               String
    stage               String          
    createdAt           DateTime        @default(now())
    updatedAt           DateTime        @updatedAt
}

model Job {
    id                  String          @id
    companyId           String
    role                String          
    rating              Float?          @default(0.0)
    type                String
    location            String
    website             String?         @default("")
    benefits            String?         @default("")
    description         String
    salary              Float?          @default(0.0)
    hours               Float?          @default(0.0)
    applicants          String[]
    stages              String[]
    createdAt           DateTime        @default(now())
    updatedAt           DateTime        @updatedAt
}